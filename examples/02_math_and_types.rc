print '--- 02 MATH & TYPES ---'

# 1. Integers
a 10 + 5
print '10 + 5 = {a} (Integer)'

# 2. Floats
b 10.0 / 4.0
print '10.0 / 4.0 = {b} (Float)'

# 3. Assignment Operators
score = 100
score += 50
print 'Score (100 += 50): {score}'

# 4. Boolean Logic
is_admin = true
is_guest = false

# OR logic (true || false -> true)
access_granted is_admin || is_guest
print 'Access Granted: {access_granted}'

# 5. Comparisons
# Define age locally for independent execution
age = 20
is_adult age >= 18
print 'If age is 20, is_adult is: {is_adult}'

print '--- END ---'
